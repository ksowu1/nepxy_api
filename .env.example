


############################################
# NexaPay â€” Environment Template (.env)
############################################

########################
# Core
########################
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@127.0.0.1:5432/nexapay_core

# JWT (set a strong secret in prod)
JWT_SECRET=dev-secret-change-me-CHANGE-THIS
JWT_ALG=HS256
JWT_ACCESS_MINUTES=60

# Optional
SYSTEM_OWNER_ID=00000000-0000-0000-0000-000000000001


############################################
# Mobile Money â€” Global Switches
############################################

# sandbox | real
MM_MODE=sandbox

# Comma-separated providers enabled in this deployment.
# Values accepted (factory normalizes): TMONEY, FLOOZ, MTN_MOMO (also MOMO works)
MM_ENABLED_PROVIDERS=TMONEY,FLOOZ,MTN_MOMO,THUNES

# If true, fail startup even in sandbox if keys are missing.
MM_STRICT_STARTUP_VALIDATION=false

# HTTP timeouts (seconds)
MM_HTTP_TIMEOUT_S=20.0
MOMO_HTTP_TIMEOUT_S=20.0


############################################
# TMONEY â€” sandbox
############################################
TMONEY_AUTH_MODE=bearer
TMONEY_SANDBOX_API_KEY=
TMONEY_SANDBOX_CASHOUT_URL=
# Optional (only required if you implement provider polling)
TMONEY_SANDBOX_STATUS_URL_TEMPLATE=

############################################
# TMONEY â€” real
############################################
TMONEY_REAL_API_KEY=
TMONEY_REAL_CASHOUT_URL=
# Optional (only required if you implement provider polling)
TMONEY_REAL_STATUS_URL_TEMPLATE=


############################################
# FLOOZ â€” sandbox
############################################
FLOOZ_AUTH_MODE=bearer
FLOOZ_SANDBOX_API_KEY=
FLOOZ_SANDBOX_CASHOUT_URL=
# Optional (only required if you implement provider polling)
FLOOZ_SANDBOX_STATUS_URL_TEMPLATE=

############################################
# FLOOZ â€” real
############################################
FLOOZ_REAL_API_KEY=
FLOOZ_REAL_CASHOUT_URL=
# Optional (only required if you implement provider polling)
FLOOZ_REAL_STATUS_URL_TEMPLATE=


############################################
# MTN MoMo (Disbursement) â€” sandbox
############################################

# Used by MoMo headers. Keep "sandbox" for sandbox.
# For production, providers typically want "production" (confirm with MTN portal).
MOMO_TARGET_ENV=sandbox

MOMO_SANDBOX_BASE_URL=
MOMO_SANDBOX_SUBSCRIPTION_KEY_DISBURSEMENT=
MOMO_SANDBOX_API_USER=
MOMO_SANDBOX_API_KEY=

# Optional callback URL (if MTN MoMo supports async callbacks in your setup)
MOMO_CALLBACK_URL=

############################################
# MTN MoMo (Disbursement) â€” real
############################################
MOMO_REAL_BASE_URL=
MOMO_REAL_SUBSCRIPTION_KEY_DISBURSEMENT=
MOMO_REAL_API_USER=
MOMO_REAL_API_KEY=
